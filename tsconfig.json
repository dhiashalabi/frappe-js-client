{
    "compilerOptions": {
        /* Target */
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "DOM"],
        "outDir": "./dist",
        "declaration": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["src"]
}
