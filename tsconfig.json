{
    "compilerOptions": {
        /* Output configuration */
        "noEmit": false,
        "outDir": "./dist",
        "declaration": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["src"]
}
